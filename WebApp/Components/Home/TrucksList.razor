@using WebApp.Components

<div class="truck-categories">
    <!-- Заголовок с поиском и фильтром (вверху, как на изображении) -->
    <div class="truck-header flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-800">Автомобили в разборе</h2>

        <div class="flex items-center space-x-4">
            <!-- Поисковая строка -->
            <div class="truck-search relative">
                <input type="text"
                       placeholder="Поиск запчастей..."
                       class="truck-search-input border border-gray-300 rounded-full p-2 pl-10 w-64 focus:outline-none focus:ring-2 focus:ring-red-500"
                       @oninput="OnSearchInput" />
                <span class="truck-search-icon absolute left-3 top-2 text-gray-400">🔍</span>
            </div>

            <!-- Фильтр -->
            <div class="truck-filter relative">
                <button class="truck-button-red px-4 py-2 rounded-full hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500"
                        @onclick="ToggleFilterDropdown">
                    Фильтр
                </button>
                <div class="@(ShowFilterDropdown ? "truck-filter-dropdown absolute right-0 mt-2 w-48 bg-white border border-gray-300 rounded-lg shadow-lg" : "hidden")">
                    <label class="block px-4 py-2 hover:bg-gray-100 cursor-pointer">
                        <input type="checkbox" class="mr-2" /> По марке
                    </label>
                    <label class="block px-4 py-2 hover:bg-gray-100 cursor-pointer">
                        <input type="checkbox" class="mr-2" /> По году
                    </label>
                    <label class="block px-4 py-2 hover:bg-gray-100 cursor-pointer">
                        <input type="checkbox" class="mr-2" /> По состоянию
                    </label>
                </div>
            </div>
        </div>
    </div>

    <!-- Сетка списка грузовиков -->
    <div class="truck-categories-grid">
        @if (Trucks != null && Trucks.Any())
        {
            @foreach (var truck in Trucks)
            {
                <div class="truck-link" @onclick="() => ToggleTruckDetails(truck.Id)">
                    <img src="https://via.placeholder.com/200x150" alt="Грузовик" class="rounded-md" />
                    <span class="truck-title">@truck.Name</span>
                    <p class="truck-text-gray">Регион: @truck.Region</p>
                    <p class="truck-text-gray">Телефон: @truck.Phone</p>
                    <button class="truck-button-red">
                        @if (ExpandedTrucks.Contains(truck.Id))
                        {
                            <span>Скрыть</span>
                        }
                        else
                        {
                            <span>Подробнее</span>
                        }
                    </button>
                    

                    <!-- Раскрывающаяся часть с дополнительной информацией -->
                    @if (ExpandedTrucks.Contains(truck.Id))
                    {
                        <div class="truck-details mt-4 p-4 bg-gray-100 rounded-lg shadow-md">
                            <p><strong>Описание:</strong> Этот грузовик в отличном состоянии, готов к разбору на запчасти. Идеален для восстановления или ремонта.</p>
                            <img src="https://via.placeholder.com/300x200" alt="Дополнительное изображение грузовика" class="mt-2 rounded-md" />
                            <p><strong>Год выпуска:</strong> 2018</p>
                            <p><strong>Состояние:</strong> Хорошее</p>
                        </div>
                    }
                </div>
            }
        }
        else
        {
            <p>Нет доступных грузовиков.</p>
        }
    </div>
    <!-- Кнопка "Посмотреть ещё" -->
    <div class="text-center mt-6">
        <button class="truck-button-red px-6 py-2 rounded-full hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500"
                @onclick="LoadMore">
            Посмотреть ещё
        </button>
    </div>
</div>

